FROM python:3.10-slim

# Env setup
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Set workdir
WORKDIR /app

# Install git (optional but useful for editable installs)
RUN apt-get update && apt-get install -y git && apt-get clean

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy codebase
COPY . .

# Expose FastAPI backend port
EXPOSE 7000

# âœ… Start FastAPI backend using uvicorn (correct entry point)
CMD ["uvicorn", "app.backend.api:app", "--host", "0.0.0.0", "--port", "7000"]
